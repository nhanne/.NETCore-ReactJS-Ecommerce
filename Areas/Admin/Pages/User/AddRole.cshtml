@page "/admin/assign-user-role/{id}"
@model AddRoleModel
@{
    ViewData["Title"] = "Thiết lập vai trò user";
}
<h1>@ViewData["Title"]</h1>
<h3>Thiết lập mật khẩu cho thành viên: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles, new {
                    id = "id-select-roles",
                    @class = "w-100"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib//multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <script>
        $('#id-select-roles').multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });

    </script>
    <partial name="_ValidationScriptsPartial" />
}
